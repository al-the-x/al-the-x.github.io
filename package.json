  },
  "homepage": "https://github.com/al-the-x/al-the-x.github.io#readme",
  "devDependencies": {
    "bower": "^1.7.2",
    "cdnjs-cdn-data": "^0.1.2",
    "del": "^2.2.0",
    "gulp": "^3.9.0",
    "gulp-concat": "^2.6.0",
    "gulp-if": "^2.0.0",
